{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["es6"],
    "outDir": "build",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
